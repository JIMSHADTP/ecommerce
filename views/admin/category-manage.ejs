<%- include('../partials/admin-header') %>

<!-- Button trigger modal -->
<div class="px-lg-5 py-5 mt-5 p-md-5">
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add categor
  </button>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add category</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/admin/addCategory" method="post">
          <div class="modal-body">
            <label class="form-label">Name</label>
            <input type="text" name="categoryName" value="" class="form-control">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <section>
    <br>
    <div>
      <div class="jumbotron shadow m-2 bg-white rounded">
        <table id="admin" class="table table-striped table-bordered table-hover" style="width:100%">
          <thead>
            <tr>
              <th>#id</th>
              <th>Category Name</th>
              <th>Change status</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((categories,index)=>{ %>
            <tr>
              <td>
                <%= index+1 %>
              </td>
              <td>
                <%= categories.categoryName %>
              </td>
              <td>
                <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#categoryModal<%=categories.id %> ">
                  Edit
                </button>
                <!-- Modal -->
                <div class="modal fade" id="categoryModal<%=categories.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <form action="/admin/editCategory/<%=categories.id %> " method="post">
                        <div class="modal-body">
                          <label class="form-label">Name</label>
                          <input type="text" name="categoryName" value="<%= categories.categoryName %> " class="form-control">
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
            
              </td>
              <% }) %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>



  <script>
    $(document).ready(function() {
      $('#admin').DataTable();
    });
  </script>